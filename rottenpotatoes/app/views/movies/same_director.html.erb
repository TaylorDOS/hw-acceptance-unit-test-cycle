<h1>Movies by the same director</h1>

<% if @movies.empty? %>
  <p>No other movies by this director.</p>
<% else %>
  <ul>
    <% @movies.each do |movie| %>
      <li>
        <h2><%= movie.title %></h2>
        <p>Release date: <%= movie.release_date.strftime("%B %d, %Y") %></p>
        <p><%= link_to 'View Details', movie_path(movie) %></p>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Back to All Movies', movies_path %>
